{
  "manifest_version": 2,
  "name": "zhexpand!",
  "version": "0.1",
  "homepage_url": "http://metaphox.github.io/zhihuexpand.html",
  "description": "Expand answers on zhihu.com",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "applications": {
    "gecko": {
      "id": "zhexpand@mozilla.org",
      "strict_min_version": "3.5"
    }
  },
  "content_scripts": [ {
      "js": [ "zhexpand.js" ],
      "matches": [ "*://*.zhihu.com/*" ]
  } ]
}
